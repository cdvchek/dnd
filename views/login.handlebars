<link rel="stylesheet" href="./css/login.css"/>
<div class="container">
    <form class="login-form" id="login-form">
        <div class="login-title">
            <h2>Login</h2>
        </div>
        <div class="login-input-field">
            <p>Email</p>
            <div class="login-input-div">
                <span>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-envelope" viewBox="0 0 16 16">
                        <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4Zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2Zm13 2.383-4.708 2.825L15 11.105V5.383Zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741ZM1 11.105l4.708-2.897L1 5.383v5.722Z"/>
                    </svg>
                </span>
                <input id="login-email" class="login-input" type="text" placeholder="Type your email" />
            </div>
        </div>
        <div class="login-input-field">
            <p>Password</p>
            <div class="login-input-div">
                <span>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                        class="bi bi-lock-fill" viewBox="0 0 16 16">
                        <path
                            d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2z" />
                    </svg>
                </span>
                <input id="login-password" class="login-input" type="password" placeholder="Type your password" />
            </div>
        </div>
        <div class="login-error-div">
            <p id="login-error"></p>
        </div>
        <div class="login-button-field">
            <button class="login-button">Login</button>
        </div>
        <div class="login-signup-field">
            <a href="/signup" class="login-signup">Don't have an account?</a>
        </div>
    </form>
</div>
<script src="./js/login.js"></script>